@model BankOfSimba.Models.BankAccount

<html xmlns:th=“http://www.thymeleaf.org“>
<head>
    <title>Getting Started: Serving Web Content</title>
    <meta http-equiv=“Content-Type” content=“text/html; charset=UTF-8" />
</head>
<body>
    @{int counter = 1;}
    @foreach (var account in Model.ListOfNamesThaIDontKnow)
    {
        @if (account.IsKing == true)
        {
            <p style="background-color:gold">@counter - @account.Name, @account.Balance.ToString("#0.00" + " Zebra"), @account.AnimalType, @account.IsKing</p>
        }
        else
        {
            <p>
                @counter - @account.Name, @account.Balance.ToString("#0.00" + " Zebra"), @account.AnimalType, @account.IsKing
            </p>
        }
        counter++;
    }
</body>
</html>