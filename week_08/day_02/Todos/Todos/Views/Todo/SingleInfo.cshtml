@model Todos.Models.Todo

<input type="hidden" name="Id" value="@Model.Id" />
<html>
<head>
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/css/Stylesheet.css")" />
    @{Layout = "_Layout";}
</head>
<body class="text-center text" >
    <table class="table col-sm-1 table-bordered">
        <tr>
            <td>Id: @Model.Id</td>
            <td id="titlerowsingle">Title: @Model.Title</td>
            @if (Model.IsUrgent == true)
            {
                <td>Is Urgent: <a style="color:green">✔</a></td>
            }
            else if (Model.IsUrgent == false)
            {
                <td>Is Urgent: <a style="color:red">✘</a></td>
            }
            @if (Model.IsDone == true)
            {
                <td>Is Done: <a style="color:green">✔</a></td>
            }
            else if (Model.IsDone == false)
            {
                <td>Is Done: <a style="color:red">✘</a></td>
            }
        </tr>
    </table>
    <h3><a class="btn btn-danger" href="/">Back To The List</a></h3>
</body>
</html>