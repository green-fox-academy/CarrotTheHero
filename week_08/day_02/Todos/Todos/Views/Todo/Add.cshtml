@model Todos.Models.Todo

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/css/Stylesheet.css")" />
    @{Layout = "_Layout";}
</head>
<body class="text-center text" >
    <table  id="Adding" class="table">
        <tr>
            <td>
                <form action="/add" method="post">
                    <h2>Add A New Todo</h2>
                    <label for="Title"></label>
                    <input type="text" name="Title" />
                    <div>
                        <button class= "btn btn-danger" type="submit">Add The Todo</button>
                    </div>
                </form>
            </td>
        </tr>
    </table>
    <h3><a href="/"  class= "btn btn-danger" >Cancel</a></h3>
</body>
</html>