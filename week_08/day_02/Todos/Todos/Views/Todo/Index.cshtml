@model List<Todos.Models.Todo>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/css/Stylesheet.css")" />
</head>
<body>
    <h1>Task(s) For Today</h1>
    <h2><a href="/add">Add new Todo</a></h2>
    <table>
        <tr>
            <td>Id:</td>
            <td>Title:</td>
            <td>IsUrgent:</td>
            <td>IsDone:</td>
            <td>Delete Action:</td>
            <td>Edit Action:</td>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Title</td>
                <td>@item.IsUrgent</td>
                <td>@item.IsDone</td>
                <td>
                    <form action="/(@item.Id)/delete" method="post">
                        <input type="hidden" name="Id" value="@item.Id" />
                        <button id="table" class="number" type="submit">Delete</button>
                    </form>
                </td>
                <td>
                    <form action="/(@item.Id)/update" method="post">
                        <input type="hidden" name="Id" value="@item.Id" />
                        <button id="table" class="number" type="submit">Edit</button>
                    </form>
                </td>
            </tr>
        }
    </table>
</body>
</html>
